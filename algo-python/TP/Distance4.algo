/*in the name of Allah*/

//mombre de mots dans une phrase

Variables
	phrase :chaine de characteres
	c, i :entier


Debut
	ecrire("donner une phrase")
	lire(phrase)
	c <-- 0
	pour i allent de 0 jusqu'a len(phrase)
		si (mid(phrase, i, 1) = ' ') alors
			c <-- c+1
		finsi
	finpour

	ecrire("votre phrase a ", c + 1, " mots")
Fin

phrase = "bonjour ca va Ibrahim"

